<%- include('header'); -%>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl"
      crossorigin="anonymous"
    />
    <link rel="stylesheet" href="/index.css" />
    <meta
      name="viewport"
      content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/css/bootstrap-select.css"
    />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.1/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-select/1.13.1/js/bootstrap-select.min.js"></script>
    <title><%= bot.user.username %> - <%= guild.name %> Settings</title>
  </head>
  <body>
    <section>
      <center>
        <br />
        <h1 style="font-size: 75px; color: #fffb00;">
          <i class="iconify" data-icon="ant-design:dashboard-filled"></i>
          <b><%= guild.name %></b> | Dashboard
        </h1>
        <div class="form-body" style="margin-top: -2%">
          <div class="form-holder">
            <div class="form-content">
              <div class="form-items">
                <h3>Server Settings</h3>
                <p>
                  Change the server settings of <%= bot.user.username %> for <%=
                  guild.name %>. 
                </p>
                <form method="POST">
                  <h5
                    style="
                      margin-bottom: 0.5rem;
                      margin-top: 10px;
                      color: #fffb00;
                    "
                  >
                    Prefix:
                  </h5>
                  <p style="font-style: italic" class="disabled">
                    The prefix that is added to messages in order to invoke commands. This doesn't affect slash commands.
                  </p>
                  <input
                    style="margin-top: -10px"
                    type="text"
                    class="form-control"
                    name="prefix"
                    value="<%= prefix ? prefix.Prefix : ">" %>"
                    placeholder="The new prefix"
                  />

                  <br />

                  <h5 style="margin-bottom: 0.5rem; margin-top: 10px;color:#fffb00">Chatbot:</h5>
                                    <p style="font-style: italic;" class="disabled">A channel where you can talk to <%= bot.user.username %>.</p>
                                    <select 
                                        class="form-control selectpicker"
                                        multiple  
                                        data-width="100%"
                                        data-live-search="true" 
                                        aria-label="Chatbot"
                                        name="chatbot"
                                    >
                                        <% guild.channels.cache.filter(channel=>channel.type==="GUILD_TEXT").sort((a, b) => a.rawPosition - b.rawPosition).forEach((channel, i) => { %>
                                            <option value="<%= channel.id%>" 
                                              <%= chatbot && chatbot.Channel.includes(channel.id) ? "selected" : "" %>> #<%= channel.name%>
                                            </option>
                                        <% }) %>
                                    </select>

                  <br />
                  <br />

                  <button
                    type="submit"
                    class="btn btn-success text-white"
                    style="font-size: 40px"
                  >
                    <i class="iconify" data-icon="cil:save"></i> Save Settings
                  </button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </center>
    </section>
    <section>
      <div
        class="card-footer"
        style="margin-top: 15%; text-align: center; color: #fffb00"
      >
      <hr style="width: 75%;background-color: #FFFFFF!important;color: #FFFFFF!important;border: 5px solid #FFFFFF!important;border-radius:25px;margin-left: 12%;">
      <h4 style="margin-top:5%;">
        <img src="<%= bot.user.displayAvatarURL({size: 4096}) %>" style="width: 4%;margin-top: -0.5%; border-radius: 50%;"> <span style="font-size: 40px;"><%= bot.user.username %></span>
      </h4>
      <br />
      <h5 style="text-align: center;">
        <a href="https://gitub.com/TCATech" target="_blank" style="font-size: 12px; color: #888a9b!important;text-decoration: none;">&copy; <%=new Date().getFullYear() %> TCA Tech | All rights reserved.</a><br><br>
        <a target="_blank" style="font-size: 20px; color: #fffb00!important;text-decoration: none;">Dashboard by <code>Tomato#6966</code>, bot by <code>Not TCA#6651</code></a>
      </h5>
      </div>
    </section>
  </body>
</html>
